[push]
	default = simple
[core]
	editor = vim
	autocrlf = input
[alias]
	ad = add .
	ap = add --patch
	br = branch
	ch = checkout
	chb = checkout -b
	cp = cherry-pick
	cpa = cherry-pick --abort
	cpc = cherry-pick --continue
	clown = clone
	cl = clone
	clr = clone --recurse-submodules -j4
	co = commit
	ca = commit -a
	caa = commit --amend
	cam = commit -am
	cm = commit -m
	lg = log --oneline
	lga = log --oneline --graph --all --decorate
	ma = merge --abort
	mc = merge --continue
	s = stash
	su = stash -u
	sl = stash list
	sc = stash clear
	sp = stash pop
	st = status -s
	sts = status
	stt = status -s .
[init]
	defaultBranch = main
